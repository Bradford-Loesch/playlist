<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Makeaplaylist</title>
  </head>
  <body>
    <div class="header">
      <a href="/songs">Dashboard</a>
      <a href="/main/logout">Log Out</a>
    </div>
    <h3>People who added <%= @song.artist %> - <%= @song.title %></h3>
    <table>
      <thead>
        <th>Name</th>
        <th>Times Added</th>
      </thead>
      <% unless @lists.empty? %>
        <% @lists.each do |list| %>
          <tr>
            <td><a href="/users/<%= list.user.id %>"><%= list.user.first_name %> <%= list.user.last_name %></a></td>
            <td><%= list.added %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </body>
</html>
